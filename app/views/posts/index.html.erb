<h1> Index Post </h1>

<% if @post.blank? %> 
  <p>Empty</p>
  <%= link_to  "Create Post", new_post_path %>
<% else %>
  <% @posts.each do |post| %>
    <div class="post_wrapper">
      <h2 class="title"><%= link_to  post.title, post %></h2>
      <p class="date"><%= time_ago_in_words(post.create_at) %> ago</p>
    </div>
  <% end %>
<% end %>